@model IEnumerable<Schedule_MVC.Models.ScrapedData>

@{ViewData["Title"] = "Search";}

<h1>
	Choose a course name
</h1>
<form method="get" asp-action="FilteredSearch">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="CourseFullName">Course name:</label>
                <select class="form-control" name="name">
                    <option value="@null">Select a course</option>
                    @foreach (var course in Model)
                    {
                        <option value="@course.CourseFullName">@course.CourseFullName</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>